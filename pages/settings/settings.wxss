.settings-page {
  position: relative;
  min-height: 100vh;
  padding-top: 160rpx;
  background: #f5f6fa;
}

.bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.2;
}

.custom-nav {
  position: fixed;
  top: 0;
  width: 100%;
  height: 120rpx;
  padding-top: 40rpx;
  background-color: #ffffff;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}

.settings-list {
  padding: 30rpx;
}

.setting-group {
  margin-bottom: 40rpx;
  border-radius: 20rpx;
  background: #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
}

.setting-item:last-child {
  border-bottom: none;
}

.logout-btn {
  margin: 50rpx 30rpx;
  padding: 20rpx;
  background-color: #ff4d4f;
  color: white;
  border-radius: 50rpx;
  text-align: center;
  font-size: 30rpx;
}
