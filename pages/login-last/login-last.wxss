.login-wrapper {
  width: 100%;
  height: 100vh;
  position: relative;
}

.bg-image {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 0;
}

.page-cancel {
  position: absolute;
  top: 150rpx;
  left: 50rpx;
  font-size: 28rpx;
  color: #ffffff;
  z-index: 10;
}

.overlay {
  position: absolute;
  bottom: 180rpx;
  width: 100%;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.agreement-box {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  margin-bottom: 40rpx;
  color: #333;
}

.checkbox-label {
  display: flex;
  align-items: center;
}

.round-checkbox .wx-checkbox-input {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  border: 2rpx solid #87CEFA;
  background-color: transparent;
}

.round-checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background-color: #87CEFA !important;
  border-color: #87CEFA !important;
  color: white;
}

.link {
  margin-left: 10rpx;
  color: #87CEFA;
}

.login-btn {
  width: 80%;
  padding: 20rpx 0;
  border-radius: 50rpx;
  color: #fff;
  font-size: 30rpx;
}

/* 弹出框样式 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.popup-content {
  position: relative;
  width: 80%;
  margin: 600rpx auto;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  text-align: center;
/* 动画初始状态 */
  opacity: 0;
  transform: translateY(100rpx);
}

.popup-cancel {
  position: absolute;
  top: 20rpx;
  right: 40rpx;
  font-size: 30rpx;
  color: #999;
  z-index: 2;
}

.avatar-btn {
  border: none;
  background: none;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #87CEFA;
}

.nickname-input {
  width: 80%;
  margin-left: 40rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
}

.confirm-btn {
  background-color: #87CEFA;
  color: #fff;
  padding: 20rpx;
  border-radius: 50rpx;
}

