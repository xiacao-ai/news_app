.login-wrapper {
  width: 100%;
  height: 100vh;
  position: relative;
}

.bg-image {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 0;
}

.overlay {
  position: absolute;
  bottom: 180rpx;
  width: 100%;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.agreement-box {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  margin-bottom: 40rpx;
  color: #333;
}

.checkbox-label {
  display: flex;
  align-items: center;
}

