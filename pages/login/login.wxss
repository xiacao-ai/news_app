/* 自定义圆形 checkbox 样式 */
.round-checkbox .wx-checkbox-input {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%; /* 圆形 */
  border: 2rpx solid #87CEFA;
  background-color: transparent;
}

/* 选中后颜色变为 #87CEFA，勾选符号颜色同样变为 #87CEFA */
.round-checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background-color: #87CEFA !important;
  border-color: #87CEFA !important;
  color: white;
}

.link {
  margin-left: 10rpx;
  color: #87CEFA;
}

.login-btn {
  width: 80%;
  padding: 20rpx 0;
  border-radius: 50rpx;
  color: #fff;
  font-size: 30rpx;
}
