page{
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden; 
}

.custom-nav{
  padding-top: 10px;
  background-color: #87CEFA;
  display: flex;
  justify-content: flex-start;
}

.logo image{
  margin-top: 40px;
  width: 130px;
  height: 50px;
  padding-left: 10px;
}

.search-box {
  margin-top: 50px;
  padding-left: 20px;
  margin-left: 10px;
  width: 30%;
  height: 30px;
  background-color: #f0f0f0;
  border-radius: 15px;
  display: flex;
  align-items: center;
}

.search-text {
  color: #999;
  font-size: 13px;
  margin-left: 5px;
}

/* 导航栏容器 */
.tab {
  padding-top: 20px;
  display: flex;
  flex-direction: row;
  overflow-x: auto;
  white-space: nowrap;
  padding: 10rpx 0;
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  background-color: #87CEFA;

}
.tab::-webkit-scrollbar {
  width: 0;
  height: 0;
}

/* 导航项样式（默认） */
.tab view {
  padding: 0rpx 30rpx;
  font-size: 30rpx;
  color: black;
  flex-shrink: 0;
  white-space: nowrap;
  position: relative;
  transition: color 0.3s;
}

/* 当前选中项样式 */
.tab .active {
  color: #ffffff;
}

/* 下划线效果 */
.tab .active::after {
  content: '';
  position: absolute;
  bottom: 10rpx;
  left: 20%;
  width: 60%;
  height: 6rpx;
  background-color: #ffffff;
  border-radius: 6rpx;
}

swiper {
  flex: 1; /* 让 swiper 占据剩余空间 */
}

swiper-item {
  overflow: hidden;
  height: 100%;
}

news-tab {
  height: 100%;
  display: block;
}