.search-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.custom-nav {
  position: relative;
  z-index: 2;
  height: 100rpx;
  padding-top: 40rpx;
  display: flex;
  align-items: center;
  background-color: transparent;
}

.custom-nav image{
  padding-top: 70rpx;
  width: 50rpx;
  height: 50rpx;
}
.back-icon {
  padding: 100rpx 20rpx;
}

.nav-title {
  padding-top: 200rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-left: 40%;
}

/* 内容部分 */
.content {
  position: relative;
  z-index: 3;
  padding: 30rpx;
  padding-top: 100rpx;
  box-sizing: border-box;
}

/* 搜索区域 */
.search-area {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}

.search-box {
  width: 350%;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 50rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
}

.search-icon {
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.search-btn {
  background-color: #1e90ff;
  color: #fff;
  font-size: 28rpx;
  border-radius: 50rpx;
  padding: 10rpx 30rpx;
}

/* 公共部分 */
/* 热搜榜样式 */
.hot-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.hot-item {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  padding: 20rpx;
}

.hot-rank {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  font-weight: bold;
  color: #fff;
  background-color: #bbb;
  margin-right: 20rpx;
}

.hot-rank.top-three:nth-child(1),
.hot-rank.top-three:nth-child(2),
.hot-rank.top-three:nth-child(3) {
  background-color: #ff8c00; /* 橙色高亮前三名 */
}

.hot-keyword {
  font-size: 28rpx;
  color: #333;
}


.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.tag {
  background-color: #f0f8ff;
  color: #333;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.clear-history {
  color: #999;
  font-size: 24rpx;
  text-align: right;
  margin-bottom: 30rpx;
}

.result-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.result-item .title {
  font-weight: bold;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.result-item .desc {
  font-size: 26rpx;
  color: #666;
}
